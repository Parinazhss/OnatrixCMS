@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";

	ViewBag.Title = Model?.Value("pageTitle") ?? null;

    var backImg = Model?.Value<IPublishedContent>("backImg")?.Url() ?? "";

    var backgroundImgRight = Model?.Value<IPublishedContent>("backgroundImgRight")?.Url() ?? "";

    var person = Model?.Value<IPublishedContent>("person")?.Url() ?? "";

    var rec = Model?.Value<IPublishedContent>("rec")?.Url() ?? "";

    var mapBack = Model?.Value<IPublishedContent>("mapBack")?.Url() ?? "";

    var logo1 = Model?.Value<IPublishedContent>("logo1")?.Url() ?? "";
    var logo2 = Model?.Value<IPublishedContent>("logo2")?.Url() ?? "";

    var logo3 = Model?.Value<IPublishedContent>("logo3")?.Url() ?? "";

    var logo4 = Model?.Value<IPublishedContent>("logo4")?.Url() ?? "";

    var logo5 = Model?.Value<IPublishedContent>("logo5")?.Url() ?? "";

    var logo6 = Model?.Value<IPublishedContent>("logo6")?.Url() ?? "";
}

<section class="atf">
    <img src="@backImg" class="earth-down">
    <img src="@backgroundImgRight" class="earth-up">

    <div class="atf-content">
        <h1>@Model?.Value("pageTitle")</h1>
        <nav class="breadcrumb-nav">
            <a href="/"> @Model?.Value("homeT") </a>

          
            <a href="/contact"> @Model?.Value("contactT") </a>
        </nav>
    </div>
</section>



<section class="contact">
    <div class="container">
        <img class="contact-info-guy" src="@person" alt="">
        <img class="contact-info-background" src="@rec" alt="">
        <div class="contact-info">
            <h2>@Model?.Value("header") </h2>
            <div class="contact-boxes">
                <div class="box">
                    <i class="fa-sharp fa-regular fa-location-dot"></i>
                    <div class="right-text">
                        <h5>@Model?.Value("officeLoc") </h5>
                        <p>@Model?.Value("address")</p>
                    </div>
                </div>
                <div class="box">
                    <i class="fa-sharp fa-regular fa-phone-flip"></i>
                    <div class="right-text">
                        <h5>@Model?.Value("phone")</h5>
                        <p>@Model?.Value("num")</p>
                    </div>
                </div>
                <div class="box">
                    <i class="fa-regular fa-envelope"></i>
                    <div class="right-text">
                        <h5>@Model?.Value("email")</h5>
                        <p>@Model?.Value("mailAdd")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

 <section id="map-section">
    <img class="map-img" src="@mapBack">
    <div class="container">
        <div class="section-heading">
            <h3>@Model?.Value("headline")</h3>
            <h2>@Model?.Value("header2")</h2>
            <p>@Model?.Value("text")</p>
        </div>
        <form>
            <div class="input-group">
                <input type="text" placeholder="Name"></input>
                <input type="text" placeholder="Phone"></input>
                <input type="email" placeholder="E-mail address"></input>
                <div class="select-wrapper">
                    <div class="select">
                        <div class="select__trigger">
                            <span>Financial consulting</span>
                            <div class="arrow"></div>
                        </div>
                        <div class="options">
                            <span class="option selected" data-value="Financial consulting">Financial consulting</span>
                            <span class="option" data-value="Business marketing">Business marketing</span>
                            <span class="option" data-value="Acquisition">Acquisition</span>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn-green">@Model?.Value("buttomText")</button>
        </form>
    </div>
</section>

<section id="brands-section">
    <div class="container">
        <img src="@logo1" alt="logo">
        <img src="@logo2" alt="logo">
        <img src="@logo3" alt="logo">
        <img src="@logo4" alt="logo">
        <img src="@logo5" alt="logo">
        <img src="@logo6" alt="logo">
    </div>
</section> 